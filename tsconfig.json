{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "outDir": "./public",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "paths": {
    "@/styles/*": [
      "styles/*"
    ],
    "@/services/*": [
      "services/*"
    ],
    "@/api/*": [
      "pages/api/*"
    ],
    "@/components/*": [
      "components/*"
    ],
    "@/helpers/*": [
      "helpers/*"
    ],
    "@/layouts/*": [
      "layouts/*"
    ],
    "@/blog/*": [
      "pages/blog/*"
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "public/workers/*.js",
    "public/worker.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
