{
	"compilerOptions": {
		"target": "esnext",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"outDir": "./public",
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"jsx": "preserve",
		"isolatedModules": true,
		"incremental": true,
		"baseUrl": "./",
		"paths": {
			"@/app/*": [
				"src/app/*"
			],
			"@/components/*": [
				"src/components/*"
			],
			"@/domains/*": [
				"src/domains/*"
			],
			"@/hooks/*": [
				"src/hooks/*"
			],
			"@/lib/*": [
				"src/lib/*"
			],
			"@/base/*": [
				"src/base/*"
			],
			"@/services/*": [
				"services/*"
			],
			"@/types/*": [
				"types/*"
			],
			"@/api/*": [
				"src/app/api/*"
			],
			"@/shared/*": [
				"src/shared/*"
			]
		},
		"plugins": [
			{
				"name": "next"
			}
		],
		"typeRoots": [
			"./node_modules/@types",
			"./types"
		]
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"public/til/workers/readingTime.js",
		"public/til/workers/serializeWorker.js",
		"public/til/workers/fileReaderWorker.js",
		"src/app/[lang]/syllabus/page.tss"
	],
	"exclude": [
		"node_modules"
	]
}